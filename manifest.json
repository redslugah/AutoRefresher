{
    "manifest_version": 3,
    "name": "Auto Refresher",
    "version": "1.0.0",
    "description": "Auto refresher simples",
    "action": {
      "default_icon": "assets/icon16.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "content_scripts": [{
      "matches": ["https://vale.service-now.com/home.do*"],
      "js": ["refresher.js"]
    }]
  }